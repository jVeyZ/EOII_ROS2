<launch>
  <!-- Lanza turtlesim y los nodos del paquete turtle_tracker -->
  <node pkg="turtlesim" exec="turtlesim_node" output="screen">
  </node>

  <!-- Crear la tortuga explorer en la posición indicada -->
  <node pkg="turtle_tracker" exec="spawn_explorer" output="screen">
    <!-- Parámetros: se comprobarán en el nodo y se ajustarán a los límites si es necesario -->
    <param name="explorer_x" value="2.0"/>
    <param name="explorer_y" value="2.0"/>
  </node>

  <!-- Nodo que mantiene estado y ofrece servicio / action -->
  <node pkg="turtle_tracker" exec="state_server" output="screen"/>

  <!-- Nodo que hace el seguimiento proporcional -->
  <node pkg="turtle_tracker" exec="explorer_follower" output="screen"/>

  <!-- Cliente que consulta el servicio cada segundo (E4) -->
  <node pkg="turtle_tracker" exec="turtle_info_client" output="screen"/>

  <!-- Cliente de ejemplo para el Action Server (opcional) -->
  <!-- <node pkg="turtle_tracker" exec="turtle_info_action_client" output="screen"/> -->
</launch>